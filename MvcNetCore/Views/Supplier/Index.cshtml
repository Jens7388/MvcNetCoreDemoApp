@model IEnumerable<MvcNetCore.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}


<section class="row d-flex justify-content-center">
    <div class="col-3">
        <h1>Suppliers</h1>
    </div>
    <div class="col-10">
        <p>
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </p>
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Firmanavn
                    </th>
                    <th>
                        Kontaktnavn
                    </th>
                    <th>
                        Stilling
                    </th>
                    <th>
                        Adresse
                    </th>
                    <th>
                        By
                    </th>
                    <th>
                        Region
                    </th>
                    <th>
                        Postnummer
                    </th>
                    <th>
                        Land
                    </th>
                    <th>
                        Telefonnummer
                    </th>
                    <th>
                        Fax
                    </th>
                    <th>
                        Hjemmeside
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Region)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostalCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fax)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HomePage)
                        </td>
                        <td class="text-center d-inline-flex px-5">
                            <a asp-action="Edit" asp-route-id="@item.SupplierId" class="btn btn-primary m-1"><i class="mdi mdi-square-edit-outline"></i></a>
                            <a asp-action="Details" asp-route-id="@item.SupplierId" class="btn btn-success m-1"><i class="mdi mdi-eye-outline"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.SupplierId" class="btn btn-danger m-1"><i class="mdi mdi-delete-off-outline"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>